  <style>
   .cartbtn{
        height: 2.5em;
    border-radius: 2px;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 20%);
    width: 45%;
    border: none;
    background: #ff9f00;
    color: #fff;
    cursor: pointer;
   }
  .cartbtn a,.buybtn a {
    text-decoration: none;
    color: white;
}
   .buybtn{
         height: 2.5em;
    border-radius: 2px;
    box-shadow: 0 1px 2px 0 rgb(0 0 0 / 20%);
    width: 45%;
    border: none;
    background: red;
    color: #fff;
    cursor: pointer;
   }
  *{
    margin: 0%;
    padding: 0%;
    box-sizing: border-box;
  }
   #container{
     width: 90%;
    margin: auto;
    }
   
    .cards{
     margin: 1rem;
    border: 2px solid gray;
    display: inline-block;
    height: 420px;
    width: 305px;
    box-shadow: 7px 8px 17px #dfd5d5;
    border-radius: 6px;
    transition: all 0.3ms ease-in-out;
    }
    .card{
      height: 300px ;
      width: 300px;
    }
    .dt{
     height: 120px;
    overflow: hidden;
   }
   .imgsrc {
     padding: 2em;
    height: 300px;
    width: 100%;
    margin: auto;
    }
    .prodtitle{
     padding: 5px;
    overflow: hidden;
    display: block;
    }
    .price{
      padding: 5px;
          display: block;
    font-size: 16px;
    font-weight: 500;
    color: #212121;
}
    .cards:hover{
      transform: scale(1.01);
    }
    .top-container{
     display: flex;
    margin: 1rem 6rem;
    justify-content: space-between;
    }
    #cart1 {
        border: 2px solid red;
    width: 90%;
    margin: 40px auto;
    }
    #cart1 h2{
      text-align: center;
    }
    .imageofcart{
      display: inline-block;
      height: 101px;
      width: 100px;
    }



  </style>
</head>
<body>
