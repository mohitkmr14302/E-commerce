  <script >
    let HTML="";
     
    let container=document.getElementById("container")
    fetch("https://fakestoreapi.com/products")
    .then(res => res.json())
    .then((data)=>{
      //console.log(data);
      for(obj in data){
      
       let html=` <div class="cards">
     <div class="card">
         <img class="imgsrc" src="${data[obj].image}" alt="">
     </div>
     <div class="dt">
       <p class="prodtitle"> ${data[obj].title}  </p>
       <p class="price">Rs. ${data[obj].price}</p>
       <div class="buttonfor">
        <button onclick="" class="cartbtn">
          ADD TO CART
        </button>
       <button class="buybtn">
          <a href="/buynow">BUY NOW</a>
       </button>
     </div>
     </div>
   </div>`;
        
       HTML+=html;
      }
    container.innerHTML=HTML;
    })
    
   
    
   

  </script>
